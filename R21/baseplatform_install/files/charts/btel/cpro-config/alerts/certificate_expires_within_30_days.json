{
  "alert": "CertificateExpiresWithin30Days",
  "expr": "((certmanager_certificate_expiration_timestamp_seconds - time()) / 60 / 60 / 24) <= 30",
  "for": "5m",
  "labels": {
    "severity": "MINOR"
  },
  "annotations": {
    "summary": "Certificate expires within 30 days (name {{ $labels.name }})",
    "description": "Certificate expires within 30 days.\n  VALUE = {{ $value }}\n  LABELS: {{ $labels }}"
  }
}