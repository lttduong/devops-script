{
  "alert": "CertificateExpiresWithin7Days",
  "expr": "((certmanager_certificate_expiration_timestamp_seconds - time()) / 60 / 60 / 24) <= 7",
  "for": "5m",
  "labels": {
    "severity": "CRITICAL"
  },
  "annotations": {
    "summary": "Certificate expires within 7 days (name {{ $labels.name }})",
    "description": "Certificate expires within 7 days.\n  VALUE = {{ $value }}\n  LABELS: {{ $labels }}"
  }
}