{
  "alert": "ElasticSearchClusterHasUnassignedShards",
  "expr": "es_cluster_shards_number{type=\"unassigned\"} > 0",
  "for": "1h",
  "labels": {
    "alert_id": "6008",
    "alert_severity": "WARNING"
  },
  "annotations": {
    "description": "Alarm - `The Elasticsearch cluster has unassigned shards. Please check!`",
    "summary": "Instance - {{ $labels.instance }}"
  }
}